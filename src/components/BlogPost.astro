---
interface Props {
    url: string;
    title: string;
    description: string;
    pubDate: string;
    image?: ImageMetadata | string;
}

const { url, title, description, pubDate, image } = Astro.props;
---

<article class="group flex flex-col rounded-lg">
    <a href={url} class="flex flex-col h-full">
        <div class="relative overflow-hidden">
            <img src={image} alt={title} />
        </div>

        <div class="flex flex-1 flex-col mb-4">
            <h2 class="text-2xl font-bold">{title}</h2>
            <p class="text-gray-700 dark:text-gray-300">{description}</p>
            <time class="text-sm text-gray-500 dark:text-gray-400"
                >{
                    new Date(pubDate).toLocaleDateString(undefined, {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                    })
                }</time
            >
        </div>
    </a>
</article>
