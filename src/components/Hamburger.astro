<button
	class="hamburger"
	aria-label="Open menu"
	aria-expanded="false"
	aria-controls="main-menu"
>
	<span class="line"></span>
	<span class="line"></span>
	<span class="line"></span>
</button>

<style>
	.hamburger {
		border: none;
		background: none;
		padding: 0;
		display: block;
		padding-right: 20px;
		cursor: pointer;
	}

	.hamburger .line {
		display: block;
		width: 40px;
		height: 5px;
		margin-bottom: 10px;
		background-color: #ff9776;
	}

	/* Desktop */
	@media screen and (min-width: 636px) {
		.hamburger {
			display: none;
		}
	}
</style>
